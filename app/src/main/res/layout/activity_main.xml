<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/BaseTextInputLayout"
        android:hint="@string/first_grade"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_first_grade"
            style="@style/InputEditTextForm" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/BaseTextInputLayout"
        android:hint="@string/second_grade"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_second_grade"
            style="@style/InputEditTextForm" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/BaseTextInputLayout"
        android:hint="@string/absents"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_absents"
            style="@style/InputEditTextForm"
            android:drawableStart="@drawable/ic_baseline_person_remove_24" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_button_calc"
        style="@style/ButtonForm"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="@string/calc" />


</LinearLayout>