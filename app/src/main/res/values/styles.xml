<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="InputEditTextForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:drawableStart">@drawable/ic_baseline_grade_24</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">5</item>
    </style>

    <style name="ButtonForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
